pipeline {
    agent { docker { image 'node:6.3' } }
    stages {
        stage('build') {
            steps {
                sh 'cd Backend'
                sh 'npm install'
            }
        
        }
        
        stage('Test') {
            steps {
              sh 'npm run test'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}