pipeline {
    agent {
        docker {
            image 'node' 
            args '-p 5000:5000' 
        }
    }
    stages {
       
        stage('build') {
                steps { 
                    dir("Backend") {

                        sh 'npm install'
                    }
             }
        }
        
          stage('Test') {
                 steps {
                     dir("Backend") {
                      
                    
                    
                    sh 'npm run test'
                 }
            }
        }

    }
    post {
      failure {
          mail to: 'alexakr3@sce.ac.il',
              subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
              body: "Something is wrong with ${env.BUILD_URL}"
    } 
}
}