pipeline {
    agent {
        docker {
            image 'node' 
            args '-p 5000:5000' 
        }
    }
    stages {
       
        stage('build') {
                steps { 
                    dir("Backend") {
                        sh 'pwd'
                        sh 'echo start build'
                        sh 'ls'
                        sh 'npm install'
                    }
             }
        }
        
          stage('Test') {
                 steps {
                     dir("Backend") {
                     sh 'cd Backend'  
                     sh 'echo start test'
                     sh 'ls'
                    sh 'npm run test'
                 }
            }
            // post {
            //     always {
            //         junit 'test-reports/results.xml'
            //     }
            // }
        }
    }
}