pipeline {
    agent {
        docker {
            image 'node' 
            args '-p 5000:5000' 
        }
    }
    stages {
        stage('build') {
            steps {
                sh 'pwd'
                sh 'echo start build'
                sh 'ls'
                sh 'cd /var/jenkins_home/workspace/Team_20/project_20/Backend'
                sh 'ls'
                sh 'npm install'
            }
        
        }
        
        stage('Test') {
            steps {
              sh 'cd Backend'  
              sh 'echo start test'
              sh 'ls'
              sh 'npm run test'
            }
            // post {
            //     always {
            //         junit 'test-reports/results.xml'
            //     }
            // }
        }
    }
}