pipeline {
    agent {
        docker {
            image 'node' 
            args '-p 5000:5000' 
        }
    }
    stages {
        dir("Backend") {
        stage('build') {
                steps {
                        sh 'pwd'
                        sh 'echo start build'
                        sh 'ls'
                        sh 'npm install'
                    }
             }
        }
        dir("Backend") {
          stage('Test') {
                 steps {
                     sh 'cd Backend'  
                     sh 'echo start test'
                     sh 'ls'
                    sh 'npm run test'
                 }
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}